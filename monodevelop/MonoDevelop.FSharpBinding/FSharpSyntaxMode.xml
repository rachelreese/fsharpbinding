<SyntaxMode name="F#" mimeTypes="text/x-fsharp">
  <Property name="LineComment">//</Property>
  <Property name="BlockCommentStart">(*</Property>
  <Property name="BlockCommentEnd">*)</Property>
  <Property name="StringQuote">"</Property>
  <Property name="StringQuote">'</Property>
  
  <EolSpan color="Preprocessor" rule="text.preprocessor">#</EolSpan>
  <EolSpan color="Comment(Doc)" rule="XmlDocumentation" tagColor="Comment(Line)">///</EolSpan>
  <EolSpan color="Comment(Line)" rule="Comment" tagColor="Comment(Line)">//</EolSpan>

  <Span color="Comment(Block)" rule="MultiComment" tagColor="Comment(Line)" stopateol="false">
    <Begin>(*</Begin>
    <End>*)</End>
  </Span>

  <Span color="String" rule="String" stopateol="false" escape='""'>
    <Begin>@"</Begin>
    <End>"</End>
  </Span>

  <Span color="String" rule="String" stopateol="false" escape='\'>
    <Begin>"</Begin>
    <End>"</End>
  </Span>

  <Span color="String(C# @ Verbatim)" rule="TripleQuotedString" stopateol="false">
    <Begin>"""</Begin>
    <End>"""</End>
  </Span>
<!--
  NOTE: We cannot support chars because ' is also used for type parameters...

  <Span color="String" rule="String" stopateol="true" escape="\">
    <Begin>&apos;</Begin>
    <End>&apos;</End>
  </Span>
-->

  <Match color="Number">CSharpNumber</Match>

  <Keywords color = "Punctuation">
    <Word>+</Word>
    <Word>-</Word>
    <Word>*</Word>
    <Word>/</Word>
    <Word>%</Word>
    <Word>^</Word>
    <Word>?</Word>
    <Word>:</Word>
    <Word>&amp;</Word>
    <Word>=</Word>
    <Word>;</Word>
    <Word>,</Word>
    <Word>.</Word>
    <Word>|</Word>
  </Keywords>

  <Keywords color = "Punctuation(Brackets)">
    <Word>(</Word>
    <Word>)</Word>
    <Word>&lt;</Word>
    <Word>&gt;</Word>
    <Word>{</Word>
    <Word>}</Word>
    <Word>[</Word>
    <Word>]</Word>
  </Keywords>

  <Keywords color="Keyword(Access)">
    <Word>base</Word>
  </Keywords>

  <Keywords color="Keyword(Selection)">
    <Word>match</Word>
    <Word>with</Word>
    <Word>if</Word>
    <Word>then</Word>
    <Word>elif</Word>
    <Word>else</Word>
  </Keywords>

  <Keywords color="Keyword(Context)">
    <Word>global</Word>
    <Word>select</Word>
    <Word>yield</Word>
    <Word>yield!</Word>
  </Keywords>

  <Keywords color="Keyword(Exception)">
    <Word>finally</Word>
    <Word>try</Word>
  </Keywords>

  <Keywords color="Keyword(Modifiers)">
    <Word>default</Word>
    <Word>inline</Word>
    <Word>static</Word>
    <Word>abstract</Word>
    <Word>override</Word>
    <Word>private</Word>
    <Word>public</Word>
    <Word>extern</Word>
    <Word>internal</Word>
    <Word>mutable</Word>
    <Word>rec</Word>
  </Keywords>

  <!-- It is really impossible to do some intelligent grouping here, because
       it looks weird no matter what we do... some things are context-sensitive,
       some things may appear in unexpected place.. so just use single color -->

  <Keywords color="Keyword(Jump)">
    <!-- expressions that create some value -->
    <Word>return</Word>
    <Word>return!</Word>

  </Keywords>

  <Keywords color="Keyword(Iteration)">

    <!-- control flow constructs -->
    <Word>downto</Word>
    <Word>in</Word>
    <Word>to</Word>
    <Word>let!</Word>
    <Word>do!</Word>
    <Word>while</Word>
    <Word>for</Word>
    <Word>do</Word>
    <Word>begin</Word>
    <Word>done</Word>
    <Word>end</Word>
    <Word>when</Word>

    <!-- object model things -->
    <Word>inherit</Word>
    <Word>of</Word>
    <Word>sig</Word>
  </Keywords>

  <Keywords color="Keyword(Operator)">
    <Word>fun</Word>
    <Word>function</Word>
    <Word>new</Word>
    <Word>use</Word>
    <Word>use!</Word>
    <Word>as</Word>
    <Word>assert</Word>
    <Word>or</Word>
    <Word>upcast</Word>
    <Word>lazy</Word>
    <Word>and</Word>
    <Word>downcast</Word>
  </Keywords>

  <Keywords color="Keyword(Constants)">
    <Word>false</Word>
    <Word>null</Word>
    <Word>true</Word>
  </Keywords>

  <Keywords color="Keyword(Type)">
    <Word>val</Word>
    <Word>let</Word>
    <Word>obj</Word>
    <Word>bool</Word>
    <Word>byte</Word>
    <Word>sbyte</Word>
    <Word>int16</Word>
    <Word>uint16</Word>
    <Word>int</Word>
    <Word>int32</Word>
    <Word>int64</Word>
    <Word>uint64</Word>
    <Word>nativeint</Word>
    <Word>unativeint</Word>
    <Word>char</Word>
    <Word>string</Word>
    <Word>decimal</Word>
    <Word>unit</Word>
    <Word>void</Word>
    <Word>float32</Word>
    <Word>single</Word>
    <Word>float</Word>
    <Word>double</Word>
  </Keywords>

  <Keywords color="Keyword(Void)">
  </Keywords>

  <Keywords color="Keyword(Namespace)">
    <Word>namespace</Word>
    <Word>open</Word>
  </Keywords>

  <Keywords color="Keyword(Property)">
    <Word>get</Word>
    <Word>set></Word>
  </Keywords>

  <Keywords color="Keyword(Declaration)">
    <Word>type</Word>
    <Word>class</Word>
    <Word>delegate</Word>
    <Word>exception</Word>
    <Word>interface</Word>
    <Word>struct</Word>
    <Word>member</Word>
    <Word>module</Word>
  </Keywords>

  <Keywords color="Keyword(Parameter)">
  </Keywords>


  <Keywords color="Keyword(Operator Declaration)">
  </Keywords>

  <Keywords color="Keyword(Other)">
  </Keywords>

  <Rule name="text.preprocessor">
    <Keywords color="Preprocessor Keyword">
      <Word>if</Word>
      <Word>else</Word>
      <Word>elif</Word>
      <Word>endif</Word>
      <Word>load</Word>
      <Word>r</Word>
      <Word>reference</Word>
      <Word>nowarn</Word>
      <Word>time</Word>
      <Word>q</Word>
      <Word>quit</Word>
      <Word>help</Word>
      <Word>include</Word>
      <Word>I</Word>
    </Keywords>
  </Rule>

  <Rule name="Comment">
    <Keywords color="Comment Tag" ignorecase="True">
      <Word>TODO</Word>
      <Word>FIXME</Word>
      <Word>HACK</Word>
      <Word>UNDONE</Word>
    </Keywords>
  </Rule>

  <Rule name="MultiComment">
    <Span color="Comment(Block)" rule="MultiComment" tagColor="comment.tag.block">
        <Begin>(*!)</Begin>
        <End>*)</End>
    </Span>

    <Keywords color="Comment Tag" ignorecase="True">
      <Word>TODO</Word>
      <Word>FIXME</Word>
      <Word>HACK</Word>
      <Word>UNDONE</Word>
    </Keywords>
  </Rule>

  <Rule name="String">
  </Rule>

  <Rule name="XmlDocumentation">
    <Span color="comment" rule="XmlDocumentationTag" stopateol="true" >
      <Begin>&lt;</Begin>
      <End>&gt;</End>
    </Span>
  </Rule>

  <Rule name="XmlDocumentationTag">
    <Span color="String" stopateol="true" escape="\" rule="String" >
      <Begin>"</Begin>
      <End>"</End>
    </Span>
    <Keywords color="Comment(DocTag)">
      <Word>c</Word>
      <Word>code</Word>
      <Word>example</Word>
      <Word>exception</Word>
      <Word>list</Word>
      <Word>para</Word>
      <Word>param</Word>
      <Word>paramref</Word>
      <Word>permission</Word>
      <Word>remarks</Word>
      <Word>returns</Word>
      <Word>see</Word>
      <Word>seealso</Word>
      <Word>summary</Word>
      <Word>value</Word>
      <Word>type</Word>
      <Word>name</Word>
      <Word>cref</Word>
      <Word>item</Word>
      <Word>term</Word>
      <Word>description</Word>
      <Word>listheader</Word>
    </Keywords>
  </Rule>
</SyntaxMode>	